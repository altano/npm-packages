{
  "name": "@altano/remark-astrojs-image-use-component",
  "version": "0.0.1-alpha.0",
  "description": "A Remark plugin for converting images in mdx to @astrojs/image components",
  "type": "module",
  "sideEffects": false,
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --onSuccess \"pnpm build:types\"",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "dev": "tsup src/index.ts --watch --format esm --dts",
    "lint": "eslint src/**/*.ts*",
    "lint:timing": "TIMING=1 eslint src/**/*.ts*",
    "lint:fix": "TIMING=1 eslint src/**/*.ts* --fix",
    "format": "prettier --write src",
    "clean": "rm -rf .turbo && rm -rf .tsbuildinfo && rm -rf node_modules && rm -rf dist",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "author": {
    "name": "Alan Norbauer",
    "email": "altano@gmail.com",
    "url": "https://alan.norbauer.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/altano/npm-packages",
    "directory": "packages/remark-astrojs-image-use-component"
  },
  "homepage": "https://github.com/altano/npm-packages/tree/main/packages/remark-astrojs-image-use-component",
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "keywords": [
    "astro",
    "remark",
    "remark-plugin",
    "mdx"
  ],
  "dependencies": {
    "debug": "^4.3.4",
    "mdast-util-mdx-jsx": "^2.1.2",
    "unist-util-inspect": "^7.0.2",
    "unist-util-is": "^5.2.1",
    "unist-util-select": "^4.0.3",
    "unist-util-visit": "^5.0.0",
    "vfile": "^5.3.7"
  },
  "devDependencies": {
    "@altano/remark-plugin-helpers": "workspace:*",
    "@altano/remark-plugin-test-util": "workspace:*",
    "@altano/tsconfig": "workspace:*",
    "@mdx-js/mdx": "^2.3.0",
    "@types/estree": "^1.0.1",
    "@types/mdast": "^4.0.0",
    "@types/node": "^18.16.0",
    "@types/prettier": "^2.7.2",
    "@types/unist": "^3.0.0",
    "@vitest/ui": "^0.30.1",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "eslint-config-altano": "workspace:*",
    "mdast-util-mdxjs-esm": "^1.3.1",
    "prettier": "^2.8.7",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "unified": "^10.1.2",
    "vitest": "^0.34.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
