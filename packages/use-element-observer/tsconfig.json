{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "declaration": true,
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
