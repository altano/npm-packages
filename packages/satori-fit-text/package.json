{
  "name": "@altano/satori-fit-text",
  "version": "0.0.1",
  "description": "Fit text to a bounding box in Node or the browser",
  "type": "module",
  "sideEffects": false,
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.ts*",
    "lint:timing": "TIMING=1 eslint src/**/*.ts*",
    "lint:fix": "TIMING=1 eslint src/**/*.ts* --fix",
    "format": "prettier --write src",
    "clean": "rm -rf .turbo && rm -rf .tsbuildinfo && rm -rf node_modules && rm -rf dist",
    "test": "run-s test:unit test:benchmark",
    "test:unit": "vitest --run",
    "test:benchmark": "vitest --run bench",
    "test:watch": "vitest tests/"
  },
  "author": {
    "name": "Alan Norbauer",
    "email": "altano@gmail.com",
    "url": "https://alan.norbauer.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/altano/npm-packages",
    "directory": "packages/satori-fit-text"
  },
  "homepage": "https://github.com/altano/npm-packages/tree/main/packages/satori-fit-text",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "typography",
    "satori",
    "opengraph",
    "fit-text"
  ],
  "dependencies": {
    "@svgdotjs/svg.js": "^3.2.0",
    "he": "^1.2.0",
    "satori": "^0.10.3",
    "satori-html": "^0.3.2",
    "svgdom": "^0.1.14"
  },
  "devDependencies": {
    "@altano/assets": "workspace:^",
    "@altano/tsconfig": "workspace:*",
    "@resvg/resvg-js": "^2.4.1",
    "@types/he": "^1.2.0",
    "@types/jest-image-snapshot": "^6.2.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitest/coverage-v8": "^0.34.3",
    "@vitest/ui": "^0.30.1",
    "jest-image-snapshot": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "react": "^18",
    "react-dom": "^18",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  }
}
