---
import StoryPage from 'astrobook/pages/story.astro'
import { isAstroStory } from 'astrobook/client'
import * as m from '/Volumes/sourcecode/npm-packages/packages/astro-components/stories/TableOfContents.stories.js'

const isAstro = isAstroStory(m)
---

<StoryPage story={'stories/table-of-contents/basic'} hasSidebar={true}>
  {
    isAstro
      ? (<m.default.component { ...m['Basic']?.args } />)
      : (<m.default.component { ...m['Basic']?.args } client:load />)
  }
</StoryPage>