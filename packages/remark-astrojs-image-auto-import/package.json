{
  "name": "@altano/remark-astrojs-image-auto-import",
  "version": "0.0.1-alpha.1",
  "description": "A Remark plugin for converting the src attribute of @astrojs/image components to inline imports",
  "type": "module",
  "sideEffects": false,
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --watch --format esm --dts",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "format": "prettier --write src",
    "clean": "rm -rf .turbo && rm -rf .tsbuildinfo && rm -rf node_modules && rm -rf dist",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "author": {
    "name": "Alan Norbauer",
    "email": "altano@gmail.com",
    "url": "https://alan.norbauer.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/altano/npm-packages",
    "directory": "packages/remark-astrojs-image-auto-import"
  },
  "homepage": "https://github.com/altano/npm-packages/tree/main/packages/remark-astrojs-image-auto-import",
  "files": [
    "dist"
  ],
  "keywords": [
    "astro",
    "remark",
    "mdx"
  ],
  "dependencies": {
    "debug": "^4.3.4",
    "unist-util-is": "^5.2.1",
    "unist-util-visit": "^4.1.2"
  },
  "devDependencies": {
    "@altano/remark-plugin-helpers": "*",
    "@altano/remark-plugin-test-util": "*",
    "@altano/tsconfig": "*",
    "@mdx-js/mdx": "^2.3.0",
    "@types/node": "^18.15.13",
    "@types/prettier": "^2.7.2",
    "@vitest/ui": "^0.30.1",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "eslint-config-altano": "*",
    "mdast": "^3.0.0",
    "mdast-util-mdx-jsx": "^2.1.2",
    "mdast-util-mdxjs-esm": "^1.3.1",
    "prettier": "^2.8.7",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "unified": "^10.1.2",
    "vfile": "^5.3.7",
    "vitest": "^0.30.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
