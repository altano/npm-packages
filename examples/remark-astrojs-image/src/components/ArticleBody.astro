---
export interface Props {
  frontmatter: MarkdownFrontmatter;
}

const {frontmatter} = Astro.props as Props;
const {description, tags} = frontmatter;
---

<article class="content">
  <slot />
</article>

<style>
  @media (max-width: 50em) {
    .hero-image {
      height: 260px;
      margin-top: 0;
      margin-bottom: 2rem;
    }
  }

  .content {
    margin-bottom: 8rem;
    width: 65vw;
    margin: auto;
  }

  .content :global(main > * + *) {
    margin-top: 1rem;
  }

  .content :global(h2) {
    margin-top: 4rem;
  }

  .author,
  .created-date,
  .updated-date {
    margin: 0;
  }

  .created-date,
  .updated-date,
  .author {
    color: var(--theme-text-lighter);
  }
</style>
