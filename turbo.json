{
  "$schema": "./node_modules/turbo/schema.json",
  "globalEnv": ["CI", "NODE_ENV"],
  "remoteCache": {
    // Not yet supported by ducktors/turborepo-remote-cache (https://github.com/ducktors/turborepo-remote-cache/issues/394)
    "signature": false
  },
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "check": {
      "dependsOn": [
        "//#check:dependencies",
        "check:exports",
        "check:types",
        "check:unused-dependencies"
      ]
    },
    "check:exports": {
      "dependsOn": ["build"]
    },
    "check:types": {
      "dependsOn": ["check:types:src", "check:types:test"]
    },
    "check:types:test": {
      "dependsOn": ["build"]
    },
    "check:types:src": {
      "dependsOn": ["build"]
    },
    "check:unused-dependencies": {
      "dependsOn": []
    },
    "format": {},
    "test": {
      "dependsOn": ["test:unit", "test:e2e"]
    },
    "test:unit": {
      "outputs": [".coverage/**"],
      "dependsOn": ["build"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "env": ["PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD", "PLAYWRIGHT_BROWSERS_PATH"]
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["build"]
    },
    "//#lint": {},
    "//#check:dependencies": {},
    "//#check:dependencies:fix": {},
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
