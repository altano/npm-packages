{
  "$schema": "https://turbo.build/schema.json",
  "experimentalUI": true,
  "globalEnv": ["CI", "NODE_ENV"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "dependsOn": ["lint", "^build"]
    },
    "format": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build", "test:unit", "test:e2e"]
    },
    "test:unit": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "test:e2e": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["build"]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {},
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
