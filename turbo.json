{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI", "NODE_ENV"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "check:exports": {
      "dependsOn": ["build"]
    },
    "check:types": {
      "dependsOn": ["check:types:src", "check:types:test"]
    },
    "check:types:test": {
      "dependsOn": ["build"]
    },
    "check:types:src": {
      "dependsOn": ["build"]
    },
    "format": {
      "cache": false
    },
    "test": {
      "dependsOn": ["test:unit", "test:e2e"]
    },
    "test:unit": {
      "outputs": [".coverage/**"],
      "dependsOn": ["build"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "env": ["DEVBOX_*", "LD_LIBRARY_PATH", "PLAYWRIGHT_*"]
    },
    "lint": {
      "cache": false,
      "dependsOn": ["build"],
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "//#lint": {
      "cache": false
    },
    "//#check:dependencies": {},
    "//#check:dependencies:fix": {},
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
